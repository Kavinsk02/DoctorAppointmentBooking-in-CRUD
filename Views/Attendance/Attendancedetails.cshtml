@model IEnumerable<WebApplication13.Models.Attendance>

@{
    ViewBag.Title = "Attendancedetails";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}

<h2>Attendancedetails</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DoctorID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttendanceDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ispresent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendanceDate)
            </td>
            <td>
                @if (item.Ispresent)
                {
                    <span style="color: green;">Present</span>
                }
                else
                {
                    <span style="color: red;">Absent</span>
                }
            </td>
            
        </tr>
    }

</table>
